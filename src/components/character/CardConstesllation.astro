---
import CircleConstellation from "../character/CircleConstellation.astro";
interface Props {
  vision: string;
  index: number;
  id: string;
  name: string;
  level: number | undefined;
  description: string;
}
const { vision, index, id, name, level, description } = Astro.props;
// console.log(typeof level)
---

<div class="p-7 flex gap-7 flex-col bg-white dark:bg-neutral-950/50 rounded-xl">
  <div class="flex flex-col items-center text-center">
    <CircleConstellation vision={vision} index={index} id={id} />
    <h2 class="font-semibold mt-3 md:text-lg dark:text-neutral-200">{name}</h2>
    <h2 class="font-semibold text-sm dark:text-neutral-200">
      Constellation {String(level)}
    </h2>
  </div>

  <div class="">
    <h2 class="dark:text-neutral-400 text-sm md:text-base">{description}</h2>
  </div>
</div>
