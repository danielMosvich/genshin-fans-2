3---
import { type CharactersProps } from "../../types/characters";
// import CardConstesllation from "./CardConstesllation.astro";
interface Props {
  id: string;
  data: CharactersProps;
}
const { id, data } = Astro.props;
function exeptionCharacters(id: string): string {
  // if (id === "navia") {
  //   return "/images/portrait/navia.png";
  // }
  return `https://genshin.jmp.blue/characters/${id}/icon-big`;
}
---

<div class="flex md:gap-10 gap-0 flex-col md:flex-row">
  <div
    class=`shadow-xl rounded-xl overflow-hidden w-40 max-w-40 max-h-40 min-w-40 h-full  ${data.rarity === 5 ? "bg-orange-300" : "bg-purple-300 "}`
  >
    <img
      class="object-cover w-full h-full aspect-square"
      src={id.includes("traveler")
        ? "https://genshin.jmp.blue/characters/traveler-anemo/icon-big-aether"
        : exeptionCharacters(id)}
      alt=""
    />
  </div>
  <div class="flex flex-col py-5">
    <h2 class="text-3xl font-semibold dark:text-neutral-100">{data.name}</h2>
    <p class="lowercase dark:text-neutral-300">
      {String(data.rarity)} Stars {data.vision} Character
    </p>
    <div class="flex flex-wrap md:gap-5 gap-2 mt-5">
      <div class="ring-1 w-fit bg-white ring-neutral-300 dark:bg-neutral-950/80 dark:ring-neutral-600 dark:text-neutral-100 md:py-2 px-3 py-1 rounded-full  md:rounded-md">
        <h2 class="text-sm md:text-base">
          weapon :
          <b class="font-semibold">{data.weapon}</b>
        </h2>
      </div>
      <div class="ring-1 w-fit bg-white ring-neutral-300 dark:bg-neutral-950/80 dark:ring-neutral-600 dark:text-neutral-100 md:py-2 px-3 py-1 rounded-full  md:rounded-md">
        <h2 class="text-sm md:text-base">
          Gender :
          <b class="font-semibold">{data.gender}</b>
        </h2>
      </div>
      <div class="ring-1 w-fit bg-white ring-neutral-300 dark:bg-neutral-950/80 dark:ring-neutral-600 dark:text-neutral-100 md:py-2 px-3 py-1 rounded-full  md:rounded-md">
        <h2 class="text-sm md:text-base">
          Birthday :
          <b class="font-semibold">{data.birthday}</b>
        </h2>
      </div>
      <div class="ring-1 bg-white ring-neutral-300 dark:bg-neutral-950/80 dark:ring-neutral-600 dark:text-neutral-100 md:py-2 px-3 py-1 rounded-full  md:rounded-md">
        <h2 class="text-sm md:text-base">
          Nation :
          <b class="font-semibold">{data.nation}</b>
        </h2>
      </div>
    </div>
  </div>
</div>
