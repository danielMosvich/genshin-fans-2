---
import CirclePassives from "./CirclePassives.astro";

interface Props {
  vision: string;
  index: number;
  id: string;
  name: string;
  unlock: string;
  description: string;
}
const { vision, index, id, name, unlock, description } = Astro.props;
---

<div class="bg-white dark:bg-neutral-950/50 shadow-sm p-7 flex flex-col gap-7 rounded-xl">
  <div class="flex flex-col items-center">
    <CirclePassives vision={vision} index={index} id={id} />
    <h3 class="font-semibold md:text-lg mt-3 dark:text-neutral-200">{name}</h3>
    <h3 class="font-semibold text-sm dark:text-neutral-200">{unlock}</h3>
  </div>

  <div class="mx-auto">
    <h3 class="dark:text-neutral-400 text-sm md:text-base">{description}</h3>
  </div>
</div>
